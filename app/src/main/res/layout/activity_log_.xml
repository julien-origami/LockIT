<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_log_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff9e6"
    tools:context="com.lockers.doorknocking.log_Activity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:paddingBottom="30dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="0dp"
                    app:srcCompat="@drawable/logo_door_lock"
                    android:id="@+id/imageView"
                    android:layout_weight="1"
                    android:layout_height="130dp" />

            </LinearLayout>

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/userID"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"
                android:fontFamily="sans-serif"
                android:textStyle="normal|bold" />

            <TextView
                android:text="Vos portes :"
                android:layout_marginTop="30dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:layout_marginTop="30dp"
                android:id="@+id/spinner" />

            <Button
                android:text="Ouvrir"
                android:enabled="true"
                android:layout_marginTop="50dp"
                android:background="#c2c4c6"
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/door" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:text="Logout"
        android:id="@+id/button2"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="#c2c4c6"
        android:textColor="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:layout_weight="1" android:layout_width="120dp"
        android:layout_height="30dp" />

</RelativeLayout>
